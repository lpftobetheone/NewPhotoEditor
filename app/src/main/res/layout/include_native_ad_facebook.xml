<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="314dp"
    android:layout_height="164dp" >

    <ImageView
        android:id="@+id/native_ad_cover_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/native_ad_top_view"
        android:layout_width="match_parent"
        android:layout_height="124dp" >

        <TextView
            android:id="@+id/native_ad_body_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:gravity="center"
            android:text="@string/title_editor_collage_button"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/native_ad_top_view"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/native_ad_title_text_view"
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/native_ad_install_button"
            android:layout_toStartOf="@+id/native_ad_install_button"
            android:gravity="center"
            android:text="@string/title_editor_collage_button"
            android:textColor="#4A4A4A"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/native_ad_install_button"
            android:layout_width="98dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:clickable="false"
            android:src="@mipmap/button_install" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/native_ad_icon_image_view"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@mipmap/ic_native_ad_icon_bg"
        android:padding="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Ad"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

</RelativeLayout>