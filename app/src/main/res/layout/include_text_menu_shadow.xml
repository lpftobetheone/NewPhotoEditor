<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="24dp"
    android:orientation="vertical"
    android:padding="@dimen/padding_normal">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginLeft="20dp"
        android:background="@color/color_top_bar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="0dp">

            <GridView
                android:id="@+id/shadow_grid"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:numColumns="auto_fit"
                android:stretchMode="spacingWidthUniform"></GridView>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        style="@style/SeekBarLinearLayout"
        android:layout_marginTop="36dp">

        <ImageView
            style="@style/SeekBarSiderImage"
            android:src="@mipmap/text_offset_down_button" />

        <SeekBar
            android:id="@+id/text_seek_bar_shadow_offset"
            style="@style/NormalSeekBar" />

    </LinearLayout>

</LinearLayout>