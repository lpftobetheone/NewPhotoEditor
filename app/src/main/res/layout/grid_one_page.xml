<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="@dimen/padding_normal">

        <RelativeLayout style="@style/GridItemRelativeLayout">

            <ImageButton
                android:id="@+id/grid_item_image_button_0"
                style="@style/GridItemImageButton" />

        </RelativeLayout>

        <RelativeLayout style="@style/GridItemRelativeLayout">

            <ImageButton
                android:id="@+id/grid_item_image_button_1"
                style="@style/GridItemImageButton" />

        </RelativeLayout>

        <RelativeLayout style="@style/GridItemRelativeLayout">

            <ImageButton
                android:id="@+id/grid_item_image_button_2"
                style="@style/GridItemImageButton" />

        </RelativeLayout>

        <RelativeLayout style="@style/GridItemRelativeLayout">

            <ImageButton
                android:id="@+id/grid_item_image_button_3"
                style="@style/GridItemImageButton" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="horizontal"
        android:padding="@dimen/padding_normal">

        <RelativeLayout style="@style/GridItemRelativeLayout">

            <ImageButton
                android:id="@+id/grid_item_image_button_4"
                style="@style/GridItemImageButton" />

        </RelativeLayout>

        <RelativeLayout style="@style/GridItemRelativeLayout">

            <ImageButton
                android:id="@+id/grid_item_image_button_5"
                style="@style/GridItemImageButton" />

        </RelativeLayout>

        <RelativeLayout style="@style/GridItemRelativeLayout">

            <ImageButton
                android:id="@+id/grid_item_image_button_6"
                style="@style/GridItemImageButton" />

        </RelativeLayout>

        <RelativeLayout style="@style/GridItemRelativeLayout">

            <ImageButton
                android:id="@+id/grid_item_image_button_7"
                style="@style/GridItemImageButton" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>