<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FragmentTop">

    <ImageButton
        android:id="@+id/material_menu"
        style="@style/TopLeftImageButton"
        android:onClick="onButtonMaterialMenu"
        android:src="@mipmap/button_drawer_menu" />

    <ImageView
        style="@style/TopLeftImageButton"
        android:clickable="false"
        android:focusable="false"
        android:visibility="invisible"
        android:src="@mipmap/ic_christmas_new" />

    <TextView
        style="@style/TopTitleTextView"
        android:layout_marginLeft="@dimen/padding_large"
        android:layout_marginStart="@dimen/padding_large"
        android:layout_toRightOf="@id/material_menu"
        android:gravity="center_vertical"
        android:text="@string/title_grid_top" />

</RelativeLayout>