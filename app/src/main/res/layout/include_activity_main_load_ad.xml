<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black90"
    android:clickable="true"
    android:focusable="true" >

    <com.zentertain.common.ui.ProgressWheel
        android:id="@+id/ad_progress_wheel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        wheel:matProg_barColor="#5588FF"
        wheel:matProg_progressIndeterminate="true" />

    <TextView
        android:id="@+id/title_ad_loading_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad_progress_wheel"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Photo is saving..."
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/title_ad_loading_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_ad_loading_0"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Showing ads..."
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>